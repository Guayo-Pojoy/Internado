@model Internado.Web.Models.Users.UserFormViewModel
@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">➕ Crear Nuevo Usuario</h2>
            <p class="text-muted mb-0">Registro de un nuevo usuario en el sistema</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <!-- Card con formulario -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <!-- Nombre Completo -->
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label">
                            <i class="bi bi-person me-1"></i>Nombre Completo
                        </label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label">
                            <i class="bi bi-envelope me-1"></i>Correo Electrónico
                        </label>
                        <input asp-for="Correo" type="email" class="form-control" placeholder="ejemplo@internado.com" />
                        <span asp-validation-for="Correo" class="text-danger small"></span>
                    </div>

                    <!-- Usuario -->
                    <div class="col-md-6">
                        <label asp-for="Usuario" class="form-label">
                            <i class="bi bi-person-badge me-1"></i>Nombre de Usuario
                        </label>
                        <input asp-for="Usuario" class="form-control" placeholder="Usuario para login" />
                        <span asp-validation-for="Usuario" class="text-danger small"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock me-1"></i>Contraseña <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" required />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <small class="form-text text-muted">Debe tener al menos 6 caracteres</small>
                    </div>

                    <!-- Rol -->
                    <div class="col-md-6">
                        <label asp-for="RolId" class="form-label">
                            <i class="bi bi-shield-check me-1"></i>Rol
                        </label>
                        <select asp-for="RolId" asp-items="ViewBag.Roles" class="form-select">
                            <option value="">-- Seleccione un rol --</option>
                        </select>
                        <span asp-validation-for="RolId" class="text-danger small"></span>
                    </div>

                    <!-- Estado -->
                    <div class="col-md-6">
                        <label class="form-label">
                            <i class="bi bi-toggle-on me-1"></i>Estado
                        </label>
                        <div class="form-check form-switch">
                            <input asp-for="Estado" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Estado" class="form-check-label">Usuario activo</label>
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Guardar Usuario
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
