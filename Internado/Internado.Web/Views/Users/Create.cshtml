@model Internado.Web.Models.Users.UserFormViewModel
@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
            <li class="breadcrumb-item active">Crear Usuario</li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-person-plus-fill me-2"></i>Crear Nuevo Usuario
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label">Nombre Completo</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Juan Pérez" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Usuario" class="form-label">Usuario</label>
                        <input asp-for="Usuario" class="form-control" placeholder="Ej: jperez" />
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                        <input asp-for="Correo" type="email" class="form-control" placeholder="Ej: jperez@ejemplo.com" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label">Contraseña <span class="text-danger">*</span></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="form-text text-muted">Campo obligatorio</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RolId" class="form-label">Rol</label>
                        <select asp-for="RolId" asp-items="ViewBag.Roles" class="form-select">
                            <option value="">-- Seleccione un rol --</option>
                        </select>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <div class="form-check form-switch">
                            <input asp-for="Estado" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Estado" class="form-check-label">Usuario activo</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Guardar Usuario
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}