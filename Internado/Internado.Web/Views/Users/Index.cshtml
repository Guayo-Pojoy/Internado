@model IEnumerable<object>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">ðŸ‘¥ GestiÃ³n de Usuarios</h2>
            <p class="text-muted mb-0">AdministraciÃ³n de usuarios del sistema</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Usuario
        </a>
    </div>

    <!-- Card con tabla -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay usuarios registrados en el sistema.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model)
                            {
                                string Nombre = u.GetType().GetProperty("Nombre")?.GetValue(u)?.ToString() ?? "";
                                string Correo = u.GetType().GetProperty("Correo")?.GetValue(u)?.ToString()
                                             ?? u.GetType().GetProperty("Email")?.GetValue(u)?.ToString()
                                             ?? "";
                                int Id = (int?)u.GetType().GetProperty("Id")?.GetValue(u) ?? 0;

                                // Estado (bool)
                                bool Estado = (bool?)u.GetType().GetProperty("Estado")?.GetValue(u) ?? false;

                                // Rol (soporta nav "Rol" con campo "NombreRol"/"Nombre")
                                var rolObj = u.GetType().GetProperty("Rol")?.GetValue(u);
                                string Rol = "";
                                if (rolObj != null)
                                {
                                    Rol = rolObj.GetType().GetProperty("NombreRol")?.GetValue(rolObj)?.ToString()
                                       ?? rolObj.GetType().GetProperty("Nombre")?.GetValue(rolObj)?.ToString()
                                       ?? "";
                                }

                                // Color para badge de rol
                                string rolBadgeClass = Rol switch
                                {
                                    "Administrador" => "bg-danger",
                                    "Docente" => "bg-primary",
                                    "Medico" => "bg-success",
                                    "Direccion" => "bg-warning",
                                    _ => "bg-secondary"
                                };

                                <tr>
                                    <td>
                                        <strong>@Nombre</strong>
                                    </td>
                                    <td>@Correo</td>
                                    <td>
                                        <span class="badge @rolBadgeClass">@Rol</span>
                                    </td>
                                    <td>
                                        @if (Estado)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@Id" class="btn btn-sm btn-info" title="Ver">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
