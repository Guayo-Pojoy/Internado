@model List<Internado.Infrastructure.Models.Curso>

@{
    ViewData["Title"] = "Cursos";
    var userRole = User?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-book"></i> Cursos</h2>
        </div>
        @if (userRole == "Administrador")
        {
            <div class="col-md-4 text-end">
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nuevo Curso
                </a>
            </div>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay cursos disponibles.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Docente Principal</th>
                                <th>Docentes Colaboradores</th>
                                <th class="text-center">Estudiantes</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var curso in Model)
                            {
                                var colaboradores = curso.AsignacionesDocentes
                                    .Where(ad => ad.Activa && ad.DocenteId != curso.DocenteId)
                                    .Select(ad => ad.Docente.Nombre)
                                    .ToList();

                                <tr>
                                    <td>
                                        <strong>@curso.Nombre</strong>
                                    </td>
                                    <td>
                                        <i class="bi bi-person-badge"></i> @curso.Docente.Nombre
                                    </td>
                                    <td>
                                        @if (colaboradores.Any())
                                        {
                                            <small class="text-muted">
                                                @string.Join(", ", colaboradores)
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Sin colaboradores</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">
                                            @curso.Calificaciones.Select(c => c.ResidenteId).Distinct().Count()
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Details", new { id = curso.Id })"
                                           class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (userRole == "Administrador")
                                        {
                                            <a href="@Url.Action("Edit", new { id = curso.Id })"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@curso.Id"
                                                  method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                        title="Eliminar"
                                                        onclick="return confirm('¿Está seguro de eliminar este curso? Esta acción no se puede deshacer.')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                <i class="bi bi-info-circle"></i>
                Mostrando @Model.Count curso(s)
            </small>
        </div>
    }
</div>
