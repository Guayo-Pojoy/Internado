@model List<Internado.Infrastructure.Models.Curso>
@{
    ViewData["Title"] = "Gesti√≥n de Cursos";
    var userRole = User?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">üìö Gesti√≥n de Cursos</h2>
            <p class="text-muted mb-0">Administraci√≥n de cursos acad√©micos</p>
        </div>
        @if (userRole == "Administrador")
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Curso
            </a>
        }
    </div>

    <!-- Card con tabla -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay cursos registrados en el sistema.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Grados</th>
                                <th>Docentes</th>
                                <th>Estudiantes</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Nombre</strong>
                                    </td>
                                    <td>
                                        @if (item.GradoCursos != null && item.GradoCursos.Any())
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-bookmark me-1"></i>@item.GradoCursos.Count() grados
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin grados</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.AsignacionesDocentes != null && item.AsignacionesDocentes.Any(ad => ad.Activa))
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-person-fill me-1"></i>@item.AsignacionesDocentes.Count(ad => ad.Activa) docentes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin docentes</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Matriculas != null && item.Matriculas.Any(m => m.Activa))
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-people me-1"></i>@item.Matriculas.Count(m => m.Activa) estudiantes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin estudiantes</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (userRole == "Administrador")
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
