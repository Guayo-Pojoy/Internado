@model IEnumerable<Internado.Infrastructure.Models.Habitacion>
@{
    ViewData["Title"] = "Gesti贸n de Habitaciones";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0"> Gesti贸n de Habitaciones</h2>
            <p class="text-muted mb-0">Administraci贸n de habitaciones del internado</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nueva Habitaci贸n
        </a>
    </div>

    <!-- Card con tabla -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay habitaciones registradas en el sistema.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>N煤mero</th>
                                <th>Tipo</th>
                                <th>Capacidad</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">Habitaci贸n @item.Numero</strong>
                                    </td>
                                    <td>@item.Tipo</td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-people me-1"></i>@item.Capacidad personas
                                        </span>
                                    </td>
                                    <td>
                                        @switch (item.Estado)
                                        {
                                            case "Disponible":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Disponible
                                                </span>
                                                break;
                                            case "Ocupada":
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-person-fill me-1"></i>Ocupada
                                                </span>
                                                break;
                                            case "Mantenimiento":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-tools me-1"></i>Mantenimiento
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.Estado</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
