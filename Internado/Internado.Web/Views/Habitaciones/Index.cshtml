@model IEnumerable<Internado.Infrastructure.Models.Habitacion>
@{
    ViewData["Title"] = "Habitaciones";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-door-closed text-primary me-2"></i>Gestion de Habitaciones
            </h1>
            <p class="text-muted mb-0">Administra las habitaciones del internado</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nueva Habitacion
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">No hay habitaciones registradas</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Crear primera habitacion
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-hash me-1"></i>Numero</th>
                                <th><i class="bi bi-people me-1"></i>Capacidad</th>
                                <th><i class="bi bi-house-door me-1"></i>Tipo</th>
                                <th><i class="bi bi-shield-check me-1"></i>Estado</th>
                                <th><i class="bi bi-building me-1"></i>Ubicacion</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">@item.Numero</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="bi bi-person me-1"></i>@item.Capacidad
                                    </span>
                                </td>
                                <td>@item.Tipo</td>
                                <td>
                                    @if (item.Estado == "Disponible")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>@item.Estado
                                        </span>
                                    }
                                    else if (item.Estado == "Ocupada")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-person-fill me-1"></i>@item.Estado
                                        </span>
                                    }
                                    else if (item.Estado == "Mantenimiento")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-tools me-1"></i>@item.Estado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-clock me-1"></i>@item.Estado
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @if (!string.IsNullOrEmpty(item.Edificio))
                                        {
                                            <span>@item.Edificio</span>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Piso))
                                        {
                                            <span> - @item.Piso</span>
                                        }
                                        @if (string.IsNullOrEmpty(item.Edificio) && string.IsNullOrEmpty(item.Piso))
                                        {
                                            <span>-</span>
                                        }
                                    </small>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 text-muted">
                    <small>
                        <i class="bi bi-info-circle me-1"></i>
                        Total de habitaciones: <strong>@Model.Count()</strong>
                    </small>
                </div>
            }
        </div>
    </div>
</div>
