@model Internado.Infrastructure.Models.Habitacion
@{
    ViewData["Title"] = "Detalles de Habitacion";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index"><i class="bi bi-house me-1"></i>Habitaciones</a>
                    </li>
                    <li class="breadcrumb-item active">Detalles: @Model.Numero</li>
                </ol>
            </nav>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Detalles de la Habitacion
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-hash me-1"></i>Numero
                                </label>
                                <p class="h5 mb-0 text-primary fw-bold">@Model.Numero</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-people me-1"></i>Capacidad
                                </label>
                                <p class="h5 mb-0">
                                    <span class="badge bg-info fs-6">
                                        @Model.Capacidad persona@(Model.Capacidad != 1 ? "s" : "")
                                    </span>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-house-door me-1"></i>Tipo
                                </label>
                                <p class="h5 mb-0">@Model.Tipo</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-shield-check me-1"></i>Estado
                                </label>
                                <p class="h5 mb-0">
                                    @if (Model.Estado == "Disponible")
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle me-1"></i>@Model.Estado
                                        </span>
                                    }
                                    else if (Model.Estado == "Ocupada")
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-person-fill me-1"></i>@Model.Estado
                                        </span>
                                    }
                                    else if (Model.Estado == "Mantenimiento")
                                    {
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="bi bi-tools me-1"></i>@Model.Estado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-clock me-1"></i>@Model.Estado
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Piso))
                        {
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="text-muted small mb-1">
                                        <i class="bi bi-building me-1"></i>Piso
                                    </label>
                                    <p class="h5 mb-0">@Model.Piso</p>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Edificio))
                        {
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="text-muted small mb-1">
                                        <i class="bi bi-buildings me-1"></i>Edificio
                                    </label>
                                    <p class="h5 mb-0">@Model.Edificio</p>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                        {
                            <div class="col-12">
                                <div class="detail-item">
                                    <label class="text-muted small mb-1">
                                        <i class="bi bi-chat-left-text me-1"></i>Observaciones
                                    </label>
                                    <div class="card bg-light border-0 mt-2">
                                        <div class="card-body">
                                            <p class="mb-0">@Model.Observaciones</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Volver
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-item {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.375rem;
        height: 100%;
    }
</style>
