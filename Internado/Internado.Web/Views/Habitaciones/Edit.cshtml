@model Internado.Infrastructure.Models.Habitacion
@{
    ViewData["Title"] = "Editar Habitación";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">✏️ Editar Habitación</h2>
            <p class="text-muted mb-0">Modificar información de la habitación</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <!-- Card con formulario -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <!-- Número (deshabilitado) -->
                    <div class="col-md-6">
                        <label asp-for="Numero" class="form-label">
                            <i class="bi bi-hash me-1"></i>Número de Habitación
                        </label>
                        <input asp-for="Numero" class="form-control" disabled />
                        <small class="form-text text-muted">El número no puede ser modificado</small>
                    </div>

                    <!-- Tipo -->
                    <div class="col-md-6">
                        <label asp-for="Tipo" class="form-label">
                            <i class="bi bi-building me-1"></i>Tipo de Habitación
                        </label>
                        <select asp-for="Tipo" class="form-select">
                            <option value="">-- Seleccione un tipo --</option>
                            <option value="Individual">Individual</option>
                            <option value="Doble">Doble</option>
                            <option value="Triple">Triple</option>
                            <option value="Cuádruple">Cuádruple</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger small"></span>
                    </div>

                    <!-- Capacidad -->
                    <div class="col-md-6">
                        <label asp-for="Capacidad" class="form-label">
                            <i class="bi bi-people me-1"></i>Capacidad
                        </label>
                        <input asp-for="Capacidad" type="number" class="form-control" placeholder="Número de personas" min="1" max="10" />
                        <span asp-validation-for="Capacidad" class="text-danger small"></span>
                    </div>

                    <!-- Estado -->
                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label">
                            <i class="bi bi-toggle-on me-1"></i>Estado
                        </label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Disponible">Disponible</option>
                            <option value="Ocupada">Ocupada</option>
                            <option value="Mantenimiento">Mantenimiento</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger small"></span>
                    </div>

                    <!-- Observaciones -->
                    <div class="col-md-12">
                        <label asp-for="Observaciones" class="form-label">
                            <i class="bi bi-card-text me-1"></i>Observaciones
                        </label>
                        <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Observaciones de la habitación (opcional)"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Actualizar Habitación
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
