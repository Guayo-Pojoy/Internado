@model Internado.Infrastructure.Models.Habitacion
@{
    ViewData["Title"] = "Eliminar Habitacion";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index"><i class="bi bi-house me-1"></i>Habitaciones</a>
                    </li>
                    <li class="breadcrumb-item active">Eliminar: @Model.Numero</li>
                </ol>
            </nav>

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminacion
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Esta seguro que desea eliminar esta habitacion?</strong>
                        <p class="mb-0 mt-2">Esta accion no se puede deshacer.</p>
                    </div>

                    <div class="row g-4 mt-2">
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Numero</label>
                            <p class="h5 mb-0 text-danger fw-bold">@Model.Numero</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Capacidad</label>
                            <p class="h5 mb-0">@Model.Capacidad persona@(Model.Capacidad != 1 ? "s" : "")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Tipo</label>
                            <p class="h5 mb-0">@Model.Tipo</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Estado</label>
                            <p class="h5 mb-0">@Model.Estado</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Piso) || !string.IsNullOrEmpty(Model.Edificio))
                        {
                            <div class="col-12">
                                <label class="text-muted small mb-1">Ubicacion</label>
                                <p class="h5 mb-0">
                                    @Model.Edificio@(!string.IsNullOrEmpty(Model.Edificio) && !string.IsNullOrEmpty(Model.Piso) ? " - " : "")@Model.Piso
                                </p>
                            </div>
                        }
                    </div>

                    <hr class="my-4">

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="bi bi-trash me-2"></i>Eliminar Habitacion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
