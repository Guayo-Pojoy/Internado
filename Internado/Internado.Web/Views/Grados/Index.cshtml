@model IEnumerable<Internado.Infrastructure.Models.Grado>
@{
    ViewData["Title"] = "Gestión de Grados";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">📖 Gestión de Grados</h2>
            <p class="text-muted mb-0">Administración de grados académicos</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Grado
        </a>
    </div>

    <!-- Card con tabla -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay grados registrados en el sistema.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nivel</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Cursos</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(g => g.Nivel))
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">Nivel @item.Nivel</span>
                                    </td>
                                    <td>
                                        <strong>@item.Nombre</strong>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(item.Descripcion ?? "Sin descripción")</small>
                                    </td>
                                    <td>
                                        @if (item.GradoCursos != null && item.GradoCursos.Any())
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-book me-1"></i>@item.GradoCursos.Count() cursos
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin cursos</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Estado == "Activo")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="AsignarCursos" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Cursos">
                                                <i class="bi bi-book"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (item.Estado == "Activo")
                                            {
                                                <form asp-action="Desactivar" asp-route-id="@item.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('¿Está seguro de desactivar este grado?');">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Desactivar">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
