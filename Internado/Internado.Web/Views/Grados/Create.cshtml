@model Internado.Infrastructure.Models.Grado
@{
    ViewData["Title"] = "Crear Grado";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">➕ Crear Nuevo Grado</h2>
            <p class="text-muted mb-0">Registro de un nuevo grado académico</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <!-- Card con formulario -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <!-- Nombre -->
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label">
                            <i class="bi bi-bookmark me-1"></i>Nombre del Grado
                        </label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Primer Año" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <!-- Nivel -->
                    <div class="col-md-6">
                        <label asp-for="Nivel" class="form-label">
                            <i class="bi bi-list-ol me-1"></i>Nivel
                        </label>
                        <input asp-for="Nivel" type="number" class="form-control" placeholder="Número de nivel" min="1" />
                        <span asp-validation-for="Nivel" class="text-danger small"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="col-md-12">
                        <label asp-for="Descripcion" class="form-label">
                            <i class="bi bi-card-text me-1"></i>Descripción
                        </label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del grado académico (opcional)"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <!-- Asignación de Cursos -->
                    <div class="col-md-12">
                        <hr class="my-3" />
                        <h5 class="mb-3">
                            <i class="bi bi-book me-2"></i>Asignar Cursos al Grado
                        </h5>

                        @if (ViewBag.Cursos != null && ((List<Internado.Infrastructure.Models.Curso>)ViewBag.Cursos).Any())
                        {
                            <div class="row g-2">
                                @foreach (var curso in (List<Internado.Infrastructure.Models.Curso>)ViewBag.Cursos)
                                {
                                    <div class="col-md-6 col-lg-4">
                                        <div class="form-check form-check-custom p-2 border rounded">
                                            <input class="form-check-input" type="checkbox" name="cursoIds" value="@curso.Id" id="curso_@curso.Id">
                                            <label class="form-check-label ms-2" for="curso_@curso.Id">
                                                @curso.Nombre
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <small class="text-muted mt-2 d-block">
                                <i class="bi bi-info-circle me-1"></i>Selecciona los cursos que pertenecen a este grado. Puedes modificar esta asignación más adelante.
                            </small>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                No hay cursos disponibles para asignar. Primero debes crear cursos en el módulo correspondiente.
                            </div>
                        }
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Guardar Grado
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
