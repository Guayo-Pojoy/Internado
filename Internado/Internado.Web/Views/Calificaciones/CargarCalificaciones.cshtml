@model Internado.Infrastructure.Models.Curso

@{
    ViewData["Title"] = "Calificaciones";
    var residentesMatriculados = ViewBag.ResidentesMatriculados as List<Internado.Infrastructure.Models.Residente>;
}

<div class="container-fluid main-content">
    <!-- Page Header -->
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">üìù Cargar Calificaciones</h2>
            <p class="text-muted mb-0">
                <i class="bi bi-journal-text me-1"></i>
                <strong>Curso:</strong> @Model.Nombre
            </p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card con tabla -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (residentesMatriculados == null || !residentesMatriculados.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay residentes matriculados en este curso.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Residente</th>
                                <th>DPI</th>
                                <th>Grado</th>
                                <th class="text-center">Nota Actual</th>
                                <th style="width: 150px;">Nueva Nota</th>
                                <th class="text-center" style="width: 100px;">Acci√≥n</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var residente in residentesMatriculados.OrderBy(r => r.NombreCompleto))
                            {
                                var calificacion = Model.Calificaciones?.FirstOrDefault(c => c.ResidenteId == residente.Id);
                                var notaActual = calificacion?.Nota ?? 0;
                                <tr>
                                    <form asp-action="GuardarCalificacion" asp-route-cursoId="@Model.Id" method="post" class="d-contents">
                                        @Html.AntiForgeryToken()
                                        <td>
                                            <strong>@residente.NombreCompleto</strong>
                                        </td>
                                        <td>
                                            <span class="text-muted">@residente.DPI</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                @(residente.Grado?.Nombre ?? "Sin grado")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            @if (notaActual > 0)
                                            {
                                                <span class="badge @(notaActual >= 60 ? "bg-success" : "bg-danger") fs-6">
                                                    @notaActual.ToString("0.0")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <input type="hidden" name="residenteId" value="@residente.Id" />
                                            <input type="hidden" name="cursoId" value="@Model.Id" />
                                            <input type="number" name="nota" min="0" max="100" step="0.1"
                                                   value="@notaActual" class="form-control form-control-sm" required />
                                        </td>
                                        <td class="text-center">
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="bi bi-check-lg"></i> Guardar
                                            </button>
                                        </td>
                                    </form>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
