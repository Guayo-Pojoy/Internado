@model Internado.Infrastructure.Models.Curso

@{
    ViewData["Title"] = $"Cargar Calificaciones - {Model.Nombre}";
}

<div class="container mt-4">
    <h2><i class="bi bi-pencil-square"></i> Cargar Calificaciones</h2>
    <p><strong>Curso:</strong> @Model.Nombre</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Estudiante</th>
                <th>DPI</th>
                <th>Nota Actual</th>
                <th>Nueva Nota</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var residente in Model.Calificaciones.Select(c => c.Residente).Distinct())
            {
                var calificacion = Model.Calificaciones.FirstOrDefault(c => c.ResidenteId == residente.Id);
                <tr>
                    <form asp-action="GuardarCalificacion" asp-route-cursoId="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <td>@residente.NombreCompleto</td>
                        <td>@residente.DPI</td>
                        <td>@(calificacion?.Nota ?? 0)</td>
                        <td>
                            <input type="hidden" name="residenteId" value="@residente.Id" />
                            <input type="hidden" name="cursoId" value="@Model.Id" />
                            <input type="number" name="nota" min="0" max="100" step="0.1"
                                   value="@(calificacion?.Nota ?? 0)" class="form-control form-control-sm" required />
                        </td>
                        <td>
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-check-lg"></i> Guardar
                            </button>
                        </td>
                    </form>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>
