@model List<Internado.Infrastructure.Models.Curso>

@{
    ViewData["Title"] = "Mis Cursos - Calificaciones";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-journal-text"></i> Mis Cursos</h2>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No tienes cursos asignados.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var curso in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@curso.Nombre</h5>
                            <p class="card-text">
                                <strong>Estudiantes:</strong> @curso.Calificaciones.Select(c => c.ResidenteId).Distinct().Count()
                            </p>
                            <a href="@Url.Action("CargarCalificaciones", new { cursoId = curso.Id })"
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Cargar Calificaciones
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
