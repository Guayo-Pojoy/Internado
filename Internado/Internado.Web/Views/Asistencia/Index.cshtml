@{
    ViewData["Title"] = "Asistencia";
    var grados = ViewBag.Grados as List<Internado.Infrastructure.Models.Grado>;
}

<div class="container-fluid main-content">
    <!-- Page Header -->
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">✅ Selecciona un Grado</h2>
            <p class="text-muted mb-0">Registro de asistencia por grado académico</p>
        </div>
    </div>

    <!-- Grados Cards -->
    @if (grados == null || !grados.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No tienes grados asignados para registrar asistencia.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var grado in grados.OrderBy(g => g.Nivel))
            {
                var cursosCount = grado.GradoCursos?.Count(gc => gc.Activa) ?? 0;
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-bookmark-fill me-2 text-success"></i>@grado.Nombre
                                </h5>
                                <span class="badge bg-success">Nivel @grado.Nivel</span>
                            </div>

                            <p class="text-muted mb-3">
                                <i class="bi bi-book me-1"></i>
                                <strong>@cursosCount</strong> curso@(cursosCount != 1 ? "s" : "") asignado@(cursosCount != 1 ? "s" : "")
                            </p>

                            @if (cursosCount > 0)
                            {
                                <button type="button" class="btn btn-success w-100"
                                        onclick="mostrarCursos(@grado.Id, '@grado.Nombre')">
                                    <i class="bi bi-list-ul me-2"></i>Ver Cursos
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-x-circle me-2"></i>Sin Cursos
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Modal para mostrar cursos -->
<div class="modal fade" id="modalCursos" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-book me-2"></i>Cursos - <span id="gradoNombre"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="listaCursos">
                <div class="text-center">
                    <div class="spinner-border text-success" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    function mostrarCursos(gradoId, gradoNombre) {
        document.getElementById('gradoNombre').textContent = gradoNombre;

        // Mostrar modal con loading spinner
        const modal = new bootstrap.Modal(document.getElementById('modalCursos'));
        modal.show();

        fetch(`@Url.Action("ObtenerCursosPorGrado")/${gradoId}`)
            .then(r => r.json())
            .then(cursos => {
                let html = '';
                if (cursos.length === 0) {
                    html = '<div class="alert alert-info"><i class="bi bi-info-circle me-2"></i>No hay cursos disponibles</div>';
                } else {
                    html = '<div class="list-group">';
                    cursos.forEach(c => {
                        html += `<a href="@Url.Action("RegistrarAsistencia")/${c.id}" class="list-group-item list-group-item-action">
                            <i class="bi bi-calendar-check me-2"></i>${c.nombre}
                            <i class="bi bi-chevron-right float-end"></i>
                        </a>`;
                    });
                    html += '</div>';
                }
                document.getElementById('listaCursos').innerHTML = html;
            })
            .catch(err => {
                document.getElementById('listaCursos').innerHTML =
                    '<div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i>Error al cargar los cursos</div>';
            });
    }
    </script>
}
