@model List<Internado.Infrastructure.Models.Curso>

@{
    ViewData["Title"] = "Registrar Asistencia";
}

<div class="container mt-4">
    <h2><i class="bi bi-check2-circle"></i> Registrar Asistencia</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No tienes cursos asignados.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var curso in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@curso.Nombre</h5>
                            <a href="@Url.Action("RegistrarAsistencia", new { cursoId = curso.Id })"
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-check2-circle"></i> Registrar Hoy
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
