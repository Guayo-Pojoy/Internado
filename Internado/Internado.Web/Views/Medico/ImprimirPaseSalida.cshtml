@{
    var consulta = ViewBag.Consulta as Internado.Infrastructure.Models.Consulta;
    ViewData["Title"] = "Pase de Salida";
    Layout = null; // Sin layout para impresión
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        @@media print {
            .no-print { display: none; }
            body { padding: 20px; }
        }
        .pase-salida {
            max-width: 800px;
            margin: 20px auto;
            border: 3px solid #0d6efd;
            padding: 30px;
            background: white;
        }
        .header-pase {
            text-align: center;
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        .firma-section {
            margin-top: 50px;
            display: flex;
            justify-content: space-around;
        }
        .firma-box {
            text-align: center;
            min-width: 200px;
        }
        .firma-line {
            border-top: 2px solid #000;
            margin-top: 60px;
            padding-top: 10px;
        }
        .info-row {
            margin-bottom: 15px;
            padding: 10px;
            background-color: #f8f9fa;
            border-left: 4px solid #0d6efd;
        }
    </style>
</head>
<body>
    <div class="pase-salida">
        <div class="header-pase">
            <h1 class="text-primary">🏥 PASE DE SALIDA</h1>
            <h4>Sistema de Internado</h4>
            <p class="text-muted mb-0">Autorización Médica</p>
        </div>

        <div class="info-row">
            <strong>Número de Pase:</strong> PS-@consulta.Id.ToString("D8")
        </div>

        <div class="info-row">
            <strong>Fecha de Emisión:</strong> @consulta.Fecha.ToString("dd/MM/yyyy HH:mm")
        </div>

        <div class="info-row">
            <strong>Residente:</strong> @consulta.Residente.NombreCompleto
        </div>

        <div class="info-row">
            <strong>DPI:</strong> @consulta.Residente.DPI
        </div>

        @if (!string.IsNullOrEmpty(consulta.Tratamiento))
        {
            var tratamientoLines = consulta.Tratamiento.Split('\n');
            string motivo = "", fechaSalida = "", fechaRetorno = "";

            foreach (var line in tratamientoLines)
            {
                if (line.Contains("Motivo:"))
                    motivo = line.Replace("Motivo:", "").Trim();
                else if (line.Contains("Fecha Salida:"))
                    fechaSalida = line.Replace("Fecha Salida:", "").Trim();
                else if (line.Contains("Fecha Retorno:"))
                    fechaRetorno = line.Replace("Fecha Retorno:", "").Trim();
            }

            <div class="info-row">
                <strong>Motivo de la Salida:</strong><br>
                <span class="ms-3">@motivo</span>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="info-row">
                        <strong>Fecha y Hora de Salida:</strong><br>
                        <span class="text-success fs-5">@fechaSalida</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-row">
                        <strong>Fecha y Hora de Retorno:</strong><br>
                        <span class="text-danger fs-5">@fechaRetorno</span>
                    </div>
                </div>
            </div>
        }

        <div class="info-row">
            <strong>Diagnóstico:</strong><br>
            <span class="ms-3">@consulta.Diagnostico</span>
        </div>

        <div class="info-row">
            <strong>Médico Autorizante:</strong> @consulta.Medico.Nombre
        </div>

        <div class="alert alert-warning mt-4">
            <strong>⚠️ INSTRUCCIONES:</strong>
            <ul class="mb-0">
                <li>Este pase debe presentarse en portería al momento de la salida.</li>
                <li>El residente debe retornar en la fecha y hora especificadas.</li>
                <li>En caso de emergencia o cambio de horario, comunicarse inmediatamente con el internado.</li>
                <li>Este documento es personal e intransferible.</li>
            </ul>
        </div>

        <div class="firma-section">
            <div class="firma-box">
                <div class="firma-line">
                    <strong>Firma del Médico</strong><br>
                    Dr(a). @consulta.Medico.Nombre
                </div>
            </div>
            <div class="firma-box">
                <div class="firma-line">
                    <strong>Firma del Residente</strong><br>
                    @consulta.Residente.NombreCompleto
                </div>
            </div>
        </div>

        <div class="text-center text-muted mt-4">
            <small>Documento generado electrónicamente el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
    </div>

    <div class="text-center mt-4 no-print">
        <button onclick="window.print()" class="btn btn-primary btn-lg">
            <i class="bi bi-printer"></i> Imprimir Pase
        </button>
        <button onclick="window.close()" class="btn btn-secondary btn-lg">
            Cerrar
        </button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
