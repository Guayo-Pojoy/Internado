@model List<Internado.Infrastructure.Models.Medicamento>

@{
    ViewData["Title"] = "Medicamentos";
}

<div class="container-fluid main-content">
    <!-- Page Header -->
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">ðŸ’Š GestiÃ³n de Medicamentos</h2>
            <p class="text-muted mb-0">Control de inventario y dispensaciÃ³n</p>
        </div>
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="NuevoMedicamento" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Medicamento
            </a>
        }
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Medicamentos Grid -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No hay medicamentos registrados en el sistema.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var medicamento in Model.OrderBy(m => m.Nombre))
            {
                var stockBajo = medicamento.StockActual <= medicamento.StockMinimo;
                var vencido = medicamento.FechaVencimiento < DateOnly.FromDateTime(DateTime.Today);
                var stockClass = stockBajo ? "danger" : "success";

                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 @(vencido ? "border-danger" : stockBajo ? "border-warning" : "")">
                        <div class="card-header bg-@stockClass text-white">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-capsule-pill me-2"></i>@medicamento.Nombre
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <p class="mb-2">
                                    <i class="bi bi-box-seam me-1"></i>
                                    <strong>Lote:</strong> @medicamento.Lote
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    <strong>Vencimiento:</strong>
                                    <span class="badge @(vencido ? "bg-danger" : "bg-info")">
                                        @medicamento.FechaVencimiento.ToString("dd/MM/yyyy")
                                    </span>
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-archive me-1"></i>
                                    <strong>Stock Actual:</strong>
                                    <span class="badge bg-@stockClass fs-6">
                                        @medicamento.StockActual unidades
                                    </span>
                                </p>
                                <p class="mb-0 text-muted small">
                                    <i class="bi bi-exclamation-circle me-1"></i>
                                    Stock MÃ­nimo: @medicamento.StockMinimo unidades
                                </p>
                            </div>

                            @if (vencido)
                            {
                                <div class="alert alert-danger py-2 mb-3">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    <strong>Â¡Vencido!</strong> No dispensar.
                                </div>
                            }
                            else if (stockBajo)
                            {
                                <div class="alert alert-warning py-2 mb-3">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    <strong>Stock Bajo!</strong> Requiere reabastecimiento.
                                </div>
                            }

                            <button type="button" class="btn btn-@(vencido ? "secondary" : "warning") w-100"
                                    data-bs-toggle="modal" data-bs-target="#dispensarModal@(medicamento.Id)"
                                    @(vencido ? "disabled" : "")>
                                <i class="bi bi-box-arrow-right me-2"></i>Dispensar
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Modal para dispensar -->
                <div class="modal fade" id="dispensarModal@(medicamento.Id)" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">
                                    <i class="bi bi-box-arrow-right me-2"></i>Dispensar: @medicamento.Nombre
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form asp-action="DispensarMedicamento" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="medicamentoId" value="@medicamento.Id" />
                                <div class="modal-body">
                                    <div class="alert alert-info py-2">
                                        <i class="bi bi-info-circle me-1"></i>
                                        <strong>Stock disponible:</strong> @medicamento.StockActual unidades
                                    </div>
                                    <div class="mb-3">
                                        <label for="cantidad@(medicamento.Id)" class="form-label">
                                            <i class="bi bi-hash me-1"></i>Cantidad a dispensar
                                        </label>
                                        <input type="number" name="cantidad" id="cantidad@(medicamento.Id)"
                                               class="form-control" min="1" max="@medicamento.StockActual" value="1" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                        <i class="bi bi-x-circle me-2"></i>Cancelar
                                    </button>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-lg me-2"></i>Dispensar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
