@model List<Internado.Infrastructure.Models.Consulta>

@{
    ViewData["Title"] = "Consultas M√©dicas";
}

<div class="container-fluid main-content">
    <!-- Page Header -->
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">ü©∫ Consultas M√©dicas</h2>
            <p class="text-muted mb-0">Historial de atenciones m√©dicas</p>
        </div>
        <a asp-action="NuevaConsulta" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nueva Consulta
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card con tabla -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay consultas m√©dicas registradas.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 12%;">Fecha</th>
                                <th style="width: 20%;">Residente</th>
                                <th style="width: 25%;">Diagn√≥stico</th>
                                <th style="width: 30%;">Tratamiento</th>
                                <th class="text-center" style="width: 13%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var consulta in Model.OrderByDescending(c => c.Fecha))
                            {
                                var tienePaseSalida = consulta.Tratamiento?.Contains("[PASE DE SALIDA AUTORIZADO]") == true;
                                <tr>
                                    <td>
                                        <small>
                                            <i class="bi bi-calendar-event me-1"></i>
                                            @consulta.Fecha.ToString("dd/MM/yyyy")
                                            <br>
                                            <i class="bi bi-clock me-1"></i>
                                            @consulta.Fecha.ToString("HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <strong>@consulta.Residente?.NombreCompleto</strong>
                                        @if (tienePaseSalida)
                                        {
                                            <br>
                                            <span class="badge bg-success">
                                                <i class="bi bi-file-earmark-check me-1"></i>Con Pase de Salida
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">
                                            <i class="bi bi-heart-pulse me-1"></i>
                                            @consulta.Diagnostico
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(consulta.Tratamiento))
                                        {
                                            var tratamientoDisplay = consulta.Tratamiento;
                                            if (tienePaseSalida)
                                            {
                                                var idx = consulta.Tratamiento.IndexOf("[PASE DE SALIDA");
                                                if (idx > 0)
                                                {
                                                    tratamientoDisplay = consulta.Tratamiento.Substring(0, idx).Trim();
                                                }
                                            }
                                            <small>
                                                <i class="bi bi-prescription2 me-1"></i>
                                                @tratamientoDisplay
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="bi bi-dash-circle me-1"></i>Sin tratamiento
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="HistorialResidente" asp-route-residenteId="@consulta.ResidenteId"
                                               class="btn btn-sm btn-info" title="Ver Historial">
                                                <i class="bi bi-clock-history"></i>
                                            </a>
                                            @if (tienePaseSalida)
                                            {
                                                <a asp-action="ImprimirPaseSalida" asp-route-consultaId="@consulta.Id"
                                                   class="btn btn-sm btn-success" title="Imprimir Pase" target="_blank">
                                                    <i class="bi bi-printer"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
