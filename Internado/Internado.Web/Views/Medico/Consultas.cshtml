@model List<Internado.Infrastructure.Models.Consulta>

@{
    ViewData["Title"] = "Consultas Médicas";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-heart-pulse"></i> Consultas Médicas</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("NuevaConsulta")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Consulta
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay consultas registradas.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Residente</th>
                        <th>Diagnóstico</th>
                        <th>Tratamiento</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var consulta in Model)
                    {
                        var tienePaseSalida = consulta.Tratamiento?.Contains("[PASE DE SALIDA AUTORIZADO]") == true;
                        <tr>
                            <td>@consulta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <strong>@consulta.Residente.NombreCompleto</strong>
                                @if (tienePaseSalida)
                                {
                                    <br><span class="badge bg-success"><i class="bi bi-file-earmark-check"></i> Con Pase de Salida</span>
                                }
                            </td>
                            <td>@consulta.Diagnostico</td>
                            <td>
                                @if (!string.IsNullOrEmpty(consulta.Tratamiento))
                                {
                                    var tratamientoDisplay = consulta.Tratamiento;
                                    if (tienePaseSalida)
                                    {
                                        var idx = consulta.Tratamiento.IndexOf("[PASE DE SALIDA");
                                        if (idx > 0)
                                        {
                                            tratamientoDisplay = consulta.Tratamiento.Substring(0, idx).Trim();
                                        }
                                    }
                                    <span>@tratamientoDisplay</span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin tratamiento</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("HistorialResidente", new { residenteId = consulta.ResidenteId })"
                                   class="btn btn-info btn-sm" title="Ver Historial">
                                    <i class="bi bi-clock-history"></i>
                                </a>
                                @if (tienePaseSalida)
                                {
                                    <a href="@Url.Action("ImprimirPaseSalida", new { consultaId = consulta.Id })"
                                       class="btn btn-success btn-sm" title="Imprimir Pase" target="_blank">
                                        <i class="bi bi-printer"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
