@model Internado.Infrastructure.Models.Residente
@{
    ViewData["Title"] = "Crear Residente";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">➕ Crear Nuevo Residente</h2>
            <p class="text-muted mb-0">Registro de un nuevo residente en el internado</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <!-- Card con formulario -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <!-- Nombre Completo -->
                    <div class="col-md-6">
                        <label asp-for="NombreCompleto" class="form-label">
                            <i class="bi bi-person me-1"></i>Nombre Completo
                        </label>
                        <input asp-for="NombreCompleto" class="form-control" placeholder="Nombre completo del residente" />
                        <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                    </div>

                    <!-- DPI -->
                    <div class="col-md-6">
                        <label asp-for="DPI" class="form-label">
                            <i class="bi bi-card-text me-1"></i>DPI
                        </label>
                        <input asp-for="DPI" class="form-control" placeholder="Documento de identificación" maxlength="13" />
                        <span asp-validation-for="DPI" class="text-danger small"></span>
                    </div>

                    <!-- Grado -->
                    <div class="col-md-6">
                        <label asp-for="GradoId" class="form-label">
                            <i class="bi bi-bookmark-fill me-1"></i>Grado
                        </label>
                        <select asp-for="GradoId" class="form-select">
                            <option value="">-- Seleccione un grado --</option>
                            @if (ViewBag.Grados != null)
                            {
                                foreach (var grado in (IEnumerable<dynamic>)ViewBag.Grados)
                                {
                                    var id = grado.GetType().GetProperty("Id")?.GetValue(grado);
                                    var nombre = grado.GetType().GetProperty("Nombre")?.GetValue(grado)?.ToString();
                                    var estado = grado.GetType().GetProperty("Estado")?.GetValue(grado)?.ToString();

                                    if (estado == "Activo")
                                    {
                                        <option value="@id">@nombre</option>
                                    }
                                }
                            }
                        </select>
                        <span asp-validation-for="GradoId" class="text-danger small"></span>
                    </div>

                    <!-- Habitación -->
                    <div class="col-md-6">
                        <label asp-for="HabitacionId" class="form-label">
                            <i class="bi bi-door-closed me-1"></i>Habitación
                        </label>
                        <select asp-for="HabitacionId" class="form-select">
                            <option value="">-- Seleccione una habitación --</option>
                            @if (ViewBag.Habitaciones != null)
                            {
                                foreach (var hab in (IEnumerable<dynamic>)ViewBag.Habitaciones)
                                {
                                    var id = hab.GetType().GetProperty("Id")?.GetValue(hab);
                                    var numero = hab.GetType().GetProperty("Numero")?.GetValue(hab)?.ToString();
                                    var estado = hab.GetType().GetProperty("Estado")?.GetValue(hab)?.ToString();

                                    if (estado == "Disponible")
                                    {
                                        <option value="@id">Habitación @numero</option>
                                    }
                                }
                            }
                        </select>
                        <span asp-validation-for="HabitacionId" class="text-danger small"></span>
                    </div>

                    <!-- Fecha de Nacimiento -->
                    <div class="col-md-6">
                        <label asp-for="FechaNacimiento" class="form-label">
                            <i class="bi bi-calendar me-1"></i>Fecha de Nacimiento
                        </label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                    </div>

                    <!-- Fecha de Ingreso -->
                    <div class="col-md-6">
                        <label asp-for="FechaIngreso" class="form-label">
                            <i class="bi bi-calendar-check me-1"></i>Fecha de Ingreso
                        </label>
                        <input asp-for="FechaIngreso" type="date" class="form-control" />
                        <span asp-validation-for="FechaIngreso" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Guardar Residente
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
