@model IEnumerable<Internado.Infrastructure.Models.Residente>
@{
    ViewData["Title"] = "Gesti√≥n de Residentes";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">üë®‚Äçüéì Gesti√≥n de Residentes</h2>
            <p class="text-muted mb-0">Administraci√≥n de residentes del internado</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Residente
        </a>
    </div>

    <!-- Card con tabla -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No hay residentes registrados en el sistema.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>DPI</th>
                                <th>Grado</th>
                                <th>Habitaci√≥n</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.NombreCompleto</strong>
                                    </td>
                                    <td>
                                        <code class="bg-light px-2 py-1 rounded">@item.DPI</code>
                                    </td>
                                    <td>
                                        @if (item.Grado != null)
                                        {
                                            <span class="badge bg-info">
                                                @item.Grado.Nombre
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin grado</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Habitacion != null)
                                        {
                                            <span class="badge bg-secondary">
                                                Hab. @item.Habitacion.Numero
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin habitaci√≥n</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (item.Estado)
                                        {
                                            case "Activo":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Activo
                                                </span>
                                                break;
                                            case "Egresado":
                                                <span class="badge bg-info">
                                                    <i class="bi bi-door-open me-1"></i>Egresado
                                                </span>
                                                break;
                                            case "Suspendido":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-pause-circle me-1"></i>Suspendido
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.Estado</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
