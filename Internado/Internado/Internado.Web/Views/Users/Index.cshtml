@model IEnumerable<object>
@{
    ViewData["Title"] = "Gestion de Usuarios";
    var roles = ViewBag.Roles as List<dynamic> ?? new List<dynamic>();
    var busqueda = ViewBag.Busqueda as string;
    var rolFiltro = ViewBag.RolFiltro as int?;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-person-badge text-primary me-2"></i>Gestion de Usuarios
            </h1>
            <p class="text-muted mb-0">Administra los usuarios del sistema</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Usuario
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-search me-1"></i>Buscar
                    </label>
                    <input type="text" name="busqueda" value="@busqueda" 
                           class="form-control" placeholder="Nombre, usuario o correo..." />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-funnel me-1"></i>Filtrar por Rol
                    </label>
                    <select name="rolFiltro" class="form-select">
                        <option value="">Todos los roles</option>
                        @foreach (var rol in roles)
                        {
                            var rolId = (int)rol.GetType().GetProperty("Id")!.GetValue(rol)!;
                            var rolTexto = (string)rol.GetType().GetProperty("Texto")!.GetValue(rol)!;
                            <option value="@rolId" selected="@(rolFiltro == rolId)">@rolTexto</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search me-1"></i>Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">No hay usuarios registrados</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Crear primer usuario
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-person me-1"></i>Usuario</th>
                                <th><i class="bi bi-person-vcard me-1"></i>Nombre</th>
                                <th><i class="bi bi-envelope me-1"></i>Correo</th>
                                <th><i class="bi bi-shield-check me-1"></i>Rol</th>
                                <th><i class="bi bi-toggle-on me-1"></i>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            var id = (int)item.GetType().GetProperty("Id")!.GetValue(item)!;
                            var usuario = item.GetType().GetProperty("Usuario1")?.GetValue(item) as string ?? 
                                         item.GetType().GetProperty("Usuario")?.GetValue(item) as string ?? "";
                            var nombre = item.GetType().GetProperty("Nombre")?.GetValue(item) as string ?? "";
                            var correo = item.GetType().GetProperty("Correo")?.GetValue(item) as string ?? "";
                            var estado = (bool?)item.GetType().GetProperty("Estado")?.GetValue(item) ?? true;
                            
                            var rolProp = item.GetType().GetProperty("Rol")?.GetValue(item);
                            var nombreRol = rolProp?.GetType().GetProperty("NombreRol")?.GetValue(rolProp) as string ?? "Sin rol";

                            <tr>
                                <td>
                                    <strong class="text-primary">@usuario</strong>
                                </td>
                                <td>@nombre</td>
                                <td>
                                    <small class="text-muted">@correo</small>
                                </td>
                                <td>
                                    @if (nombreRol == "Administrador")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-shield-fill-check me-1"></i>@nombreRol
                                        </span>
                                    }
                                    else if (nombreRol == "Docente")
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-book me-1"></i>@nombreRol
                                        </span>
                                    }
                                    else if (nombreRol == "Medico")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-heart-pulse me-1"></i>@nombreRol
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@nombreRol</span>
                                    }
                                </td>
                                <td>
                                    @if (estado)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@id" 
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@id" 
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@id" 
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 text-muted">
                    <small>
                        <i class="bi bi-info-circle me-1"></i>
                        Total de usuarios: <strong>@Model.Count()</strong>
                    </small>
                </div>
            }
        </div>
    </div>
</div>
